{{#partial "contenido" }}
    <h1 class="text-center">Editar prestaciones del establecimiento: {{establecimiento.nombre}}</h1>
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div style="max-width: 800px; margin: 0 auto; padding: 20px;">
                    <table class="table" border="groove">
                        <thead>
                        <tr >
                            <th>Servicio</th>
                            <th></th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        {{#each prestaciones}}
                            <tr>
                                <td>{{ this.servicio.nombre }}</td>
                                <td align="center">
                                    <a class="btn text-primary" href="/app/prestaciones/{{this.id}}/edit">Editar</a>
                                </td>
                                <td align="center">
                                    <a class="btn btn-danger" href="#" data-toggle="modal" data-target="#confirmEdit{{this.id}}">Eliminar</a>

                                    <div class="modal fade" id="confirmEdit{{this.id}}" tabindex="-1" role="dialog" aria-labelledby="confirmEditLabel" aria-hidden="true">
                                        <div class="modal-dialog" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="confirmEditLabel">Confirmación</h5>
                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Cerrar">
                                                        <span aria-hidden="true">&times;</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body">
                                                    ¿Seguro que quieres eliminar la prestacion {{this.servicio.nombre}}?
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                                                    <form action="/app/prestaciones/eliminar" method="post">
                                                        <input type="text" name="prestacionId" class="d-none" value="{{this.id}}">
                                                        <input type="submit" value="Eliminar" class="btn btn-danger">
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-9 offset-md-9">
        <a class="btn btn-primary" href="/app/establecimientos/{{establecimiento.id}}/prestaciones/crear">Agregar Nueva Prestacion</a>
    </div>
{{/partial}}
{{> templates/base }}