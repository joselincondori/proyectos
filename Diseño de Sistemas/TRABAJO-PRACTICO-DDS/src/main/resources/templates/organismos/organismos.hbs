{{#partial "contenido"}}

    <h1 class="text-center">Lista de Organismos de Control</h1>

    <div class="col-md-9 offset-md-9">
        <a class="btn btn-primary" href="organismos/carga-masiva">Subir Datos CSV</a>
    </div>

    <div style="max-width: 800px; margin: 0 auto; padding: 20px;">
        <table class="table" border="groove">
            <thead>
            <tr class="table-primary">
                <th style="text-align: center;"> Nombre Completo</th>
                <th style="text-align: center;"> Usuario</th>
                <th style="text-align: center;"> Entidades Controladas</th>
                <th style="text-align: center;"> Servicios</th>
            </tr>
            </thead>

            <tbody>
            {{#each organismos}}
                <tr>
                    <td align="center">{{this.nombre}}</td>
                    <td align="center">{{this.representante.usuario.username}}</td>
                    <td align="center">
                        <a class="btn btn-primary" href="/app/organismos/{{this.id}}/entidades">Ver Entidades Controladas</a>
                    </td>
                    <td align="center">
                        <a class="btn btn-primary" href="/app/organismos/{{this.id}}/servicios">Ver Servicios</a>
                    </td>
                </tr>

            {{/each}}
            </tbody>
        </table>
    </div>

    <div class="col-md-9 offset-md-9">
        <a class="btn btn-primary" href="/organismos/create">Agregar Nuevo Organismo de Control</a>
    </div>

{{/partial}}
{{> templates/base}}