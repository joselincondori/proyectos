{{#partial "contenido" }}
    {{#if servicio}}
    <h1 class="text-center">Servicio: {{servicio.nombre}}</h1>
    {{else}}
    <h1 class="text-center">Nuevo Servicio</h1>
    {{/if}}
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <form method="POST" {{#if servicio}} action="/app/servicios/{{servicio.id}}/edit" {{else}} action="/app/servicios" {{/if}}>
                    <div class="form-row">
                        <div class="form-group col-md-8">
                            <label for="nombre">Nombre</label>
                            <input name="nombre" class="form-control" {{#if servicio}} value="{{servicio.nombre}}" {{/if}} placeholder="Nombre">
                        </div>
                        <div class="form-group col-md-8">
                            <label for="descripcion">Descripcion</label>
                            <input name="descripcion" class="form-control" {{#if servicio}} value="{{servicio.descripcion}}" {{/if}} placeholder="Descripcion">
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">Guardar</button>
                </form>
            </div>
        </div>
    </div>
{{/partial}}
{{> templates/base }}