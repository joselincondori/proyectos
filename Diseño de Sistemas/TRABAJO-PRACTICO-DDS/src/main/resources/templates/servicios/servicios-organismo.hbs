{{#partial "contenido" }}
    <div>
        <h2 class="text-center">Servicios del organismo de control: {{organismo.nombre}}</h2>
    </div>
    <div style="max-width: 800px; margin: 0 auto; padding: 20px;">
        <table class="table" border="groove">
            <thead>
            <tr class="table-primary">
                <th>Nombre</th>
                <th>Descripción</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {{#each servicios}}
                <tr>
                    <td>{{ this.nombre }}</td>
                    <td>{{ this.descripcion }}</td>
                    <td align="center">
                    <a class="btn btn-danger" href="#" data-toggle="modal" data-target="#confirmEdit{{this.id}}">Eliminar</a>

                    <div class="modal fade" id="confirmEdit{{this.id}}" tabindex="-1" role="dialog" aria-labelledby="confirmEditLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="confirmEditLabel">Confirmación</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Cerrar">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    ¿Seguro que quieres eliminar el servicio {{this.nombre}} del organismo de control {{organismo.nombre}}?
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                                    <form method="post" action="/app/organismos/servicios/sacar">
                                        <input type="text" name="servicioId" value="{{this.id}}" class="d-none">
                                        <input type="submit" value="Eliminar" class="btn btn-danger">
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </td>
                </tr>
            {{/each}}
            </tbody>
        </table>

    <div class="col-md-9 offset-md-9">
        <a class="btn btn-primary" href="/app/organismos/{{organismo.id}}/servicios/agregar">Agregar Nuevo Servicio</a>
    </div>
    </div>
{{/partial}}
{{> templates/base }}