{{#partial "contenido"}}
    <h1 class="text-center">CONFIGURACION SERVICIOS</h1>

    <div style="max-width: 1000px; margin: 0 auto; padding: 50px;">
        <table class="table" style="width: 100%; max-width: 100%; table-layout: auto;">
            <thead>
            <tr class="table-primary">
                <th style="text-align: center;">Nombre</th>
                <th style="text-align: center;">Descripcion</th>
                <th></th>
                <th></th>
            </tr>
            </thead>

            <tbody>
            {{#each servicios}}
                <tr>
                    <td align="center">{{this.nombre}}</td>
                    <td align="center">{{this.descripcion}}</td>
                    <td align="center">
                        <a class="btn text-primary" href="/app/servicios/{{this.id}}/edit">Editar</a>
                    </td>
                    <td align="center">
                        <a class="btn btn-danger" href="#" data-toggle="modal" data-target="#confirmEdit{{this.id}}">Eliminar</a>

                        <div class="modal fade" id="confirmEdit{{this.id}}" tabindex="-1" role="dialog" aria-labelledby="confirmEditLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="confirmEditLabel">Confirmación</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Cerrar">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        ¿Seguro que quieres eliminar el servicio {{this.nombre}}?
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                                        <a class="btn btn-danger" href="/app/servicios/{{this.id}}/delete">Eliminar</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
            {{/each}}
            </tbody>
        </table>
    </div>

    <div class="col-md-9 offset-md-9">
        <a class="btn btn-primary" href="/app/servicios/create">Agregar Nuevo Servicio</a>
    </div>

{{/partial}}
{{> templates/base}}